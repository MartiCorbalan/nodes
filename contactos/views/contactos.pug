extends layout.pug

block content
	div.container.m-5
		div.row
			div.offset-3.col-8
				h3.text-muted.mb-5 Lista de contactos
				form.form-horizontal(role="form", action="/contactos", method="get")
					div.input-group.mb-3
						input.form-control(type="text", name="search", placeholder="Buscar contactos...")
						div.input-group-append
							button.btn.btn-primary(type="submit") Buscar
				table.table.table-striped.mt-5
					thead
						tr
							th nombre
							th tel√©fono
							th email
							th instagram
							th
					tbody
						for contact in contactos 
							tr
								td #{contact.name}
								td #{contact.mail}
								td #{contact.phone}
								td #{contact.instagram}
								td
									a.btn.btn-primary.btn-sm.active.mr-3(href="/contactos/1234567890/edit", role="button", aria-pressed="true")
										img(src="/images/pencil.svg")
									a.btn.btn-danger.btn-sm.active(href="/contactos/+"contact._id+"/delete", role="button", aria-pressed="true")
										img(src="/images/trash.svg")