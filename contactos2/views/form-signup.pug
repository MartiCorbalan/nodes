extends layout.pug

block content
	div.container.m-5
		div.row
			div.offset-4.col-6
				h3.text-muted.mb-5 Datos del usuario
				form.form-horizontal(role="form", action="/usuarios/signup", method="post")
					div.form-group
						input.form-control.input-lg.panel-primary#username(type="text", name="username", placeholder="nombre de usuario")
					div.form-group
						input.form-control.input-lg.panel-primary#pass(type="password", name="pass", placeholder="introduce la contraseña")
					div.form-group
						input.form-control.input-lg.panel-primary#pass_rp(type="password", name="pass_rp", placeholder="vuelve a introducir la contraseña")
					div.form-group.text-right.mt-5
						button.btn.btn-primary(type="submit") Enviar
				if(errores)
					for error in errores
						div.alert.alert-danger #{error}