include layout.pug
block content
	div.container.m-5
		div.row
			div.offset-4.col-6
				h3.text-muted.mb-5 Acceso
				form.form-horizontal(role="form", action="/login", method="post")
					div.form-group
						input.form-control.input-lg.panel-primary#username(type="text", name="usuario", placeholder="Nom d'usuari", required)
					div.form-group
						input.form-control.input-lg.panel-primary#pass(type="password", name="password", placeholder="Digues la contrasenya", required)
					div.form-group.text-right.mt-5
						button.btn.btn-primary(type="submit") Entrar
				if(error)
					div.alert.alert-danger #{error}